			</nameValuePair>

			<nameValuePair>
				<name>opennlp.uima.POSFeature</name>
				<value>
					<string>pos</string>
				</value>
			</nameValuePair>
		</configurationParameterSettings>
		
		<typeSystemDescription />
		<typePriorities />
		<fsIndexCollection />
		<capabilities />
